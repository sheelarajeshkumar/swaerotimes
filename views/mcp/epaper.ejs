<%- include('layouts/header') -%>
        
        <!-- page content -->
        <div class="right_col" role="main">
          <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Epaper</h3>
              </div>


            </div>

            <div class="clearfix"></div>

            <div class="">




              <div class="clearfix"></div>




              <div class="clearfix"></div>




            </div>
            <div class="clearfix"></div>

            <div class="">






            </div>

            <div class="col-md-4 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>Add epaper</h2>
                  
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">

                  <form method="POST" action="" class="form-horizontal form-label-left" encType="multipart/form-data">

                    <div class="form-group">
                      <label class="control-label">Epaper</label>
						<% var today = new Date(); var mon = ("0" + (today.getMonth() + 1)).slice(-2) %>
                       <input name="date" type="date" value="<%= today.getFullYear()+'-'+mon+'-'+today.getDate() %>" class="form-control">
                          
                    </div>
                    <div class="form-group">
                        <label class="control-label">Upload</label>

                            <input name="file" accept="image/*" value="" type="file" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Add" />
                    </div>
                      
                    
                  </form>
                </div>
              </div>
            </div>












            <div class="col-md-8 col-sm-12 col-xs-12">
              <div class="x_panel">
                <div class="x_title">
                  <h2>All epapers </h2>
                 
                  <div class="clearfix"></div>
                </div>
                <div class="x_content">
                  <!-- start accordion -->
                  <table class="table table-striped projects">
                      <thead>
                        <tr>
                          <th style="width: 1%">#</th>
                          <th>Date</th>
                          <th style="width: 20%">Action</th>
                        </tr>
                      </thead>
                      <tbody>

                      	<% epaper.forEach(function(paper){ %>
                        <tr>
                          <td>#</td>
                          <td>
                            <a href="/swaerotimes/epapers/<%= paper.link; %>" target="_blank"><%= paper.epaper_date; %></a>
                            <br />
                          </td>
                          <!-- <td>
                              <a>12</a>
                              <br />
                          </td> -->
                          <td>
                            <!-- <a href="#" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a> -->
                           
                            <a href="/mcp/ePaper/delete/<%= paper._id; %>" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                          </td>
                        </tr>
                        <% }); %>


                      </tbody>
                    </table>
                    <!-- end of accordion -->
                </div>
              </div>
            </div>
          </div>
          <div class="clearfix"></div>
        </div>
        <!-- /page content -->
<%- include('layouts/footer') -%>