                    <!-- <p>Simple table with project listing with progress and editing options</p> -->

                    <!-- start project list -->
                    <form action="" method="POST">
                    <table class="table table-striped projects">
                        <thead>
                          <tr>
                            <th style="width: 1%">#</th>
                            <th>Name</th>
                            <th>Mobile number</th>
                            <th>Email</th>
                            <th>From</th>
                            <th>To</th>
                            <th>INR</th>
                            <th>Address</th>
                            <th>Added by</th>
                            <th style="width: 5%">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% subscribers.forEach(function(subscriber) { %>

                            <tr>
                                <td>#</td>
                                <td><%= subscriber.name %></td>
                                <td><%= subscriber.number %></td>
                                <td><%= subscriber.email %></td>
                                <td><%= subscriber.from %></td>
                                <td><%= subscriber.to %></td>
                                <td><%= subscriber.INR %></td>
                                <td><%= subscriber.address %></td>
                                <td><%= subscriber.addedBy.fullname %></td>
                                <% if(session.user.role_id.role !='village_reporter'){ %>
                                <td><a href="/mcp/subscribers/delete/<%= subscriber._id %>" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a></td>
                                <% } %>
                            </tr>
                            <% }); %>
                          <tr>
                            <td>#</td>
                            <td><input  class="form-control" type="text" name="name" placeholder="Subscriber name" required></td>
                            <td><input  class="form-control" type="tel" name="number" placeholder="Subscriber phone number" required></td>
                            <td><input class="form-control" type="email" name="email" placeholder="Subscriber email" required></td>

                            <td><input class="form-control" type="date" name="from" placeholder="Subscriber from date" required></td>
                            <td><input class="form-control" type="date" name="to" placeholder="Subscriber to date" required></td>
                            <td><input class="form-control" type="number" name="INR" placeholder="Subscriber INR" required></td>
                            <td><input class="form-control"  type="text" name="address" placeholder="Subscriber address" required></td>
                            <td>---</td>
                            <td>
                                <input type="submit" name="add" value="add">
                              </td>
                          </tr>
                          
                        </tbody>
                      </table>
